{
  "manifest_version": 3,
  "name": "小米 passToken 获取助手",
  "version": "1.2.0",
  "description": "一个用于从小米官网安全获取 passToken 和 userId 的小工具。",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://*.xiaomi.com/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "获取小米 passToken"
  }
}